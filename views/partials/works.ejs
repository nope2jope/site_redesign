<div id="WORKS" class="container main-body hide">
    <div class="row">
        <div class="col-12 ease-in">
            <h1 class=" ease-in">HOW VERY LIKE KING ARTHUR...</h1>
        </div>

        <div class="col-6 ease-in">
            <div class="buttons ease-in">
            <p>Here is a selection of my web development and other creative works.</p>
            <p>Additional assets, fonts, and code are available on my GitHub.</p>
        </div>
        </div>

        <% if (locals.data) { %>
            <% for (let i = 0; i < data.length; i++) { %>

            <div class="col-6 works-card ease-in">
                <div class="works-header">
                    <h3 class="works-text center">- <%= data[i].title %> -</h3>
                </div>

                <div class="works-body center"> <img class="works-img" src=<%= data[i].thumbnail %> alt="">
                </div>
                <div class="works-footer">
                    <p class="works-text"><%= data[i].description %>.
                    <% if (data[i].tags.includes("writing")) { %>
                        <a id="<%=data[i].modal %>" class="works-link modal-open"><img class="open-arrow" src="assets/open_arrow.png"></a>
                    <% } else {  %>
                        <a href="<%= data[i].endpoint %>" class="works-link" target="_blank"><img class="open-arrow" src="assets/open_arrow.png"></a>
                        <% } %>
                    </p>
                    <ul class="works-tag">
                        <% for (let a = 0; a < data[i].tags.length; a++) { %>
                        <li class="works-tag"> 
                        +<%= data[i].tags[a] %></li>
                        <% } %>
                    </ul>
                </div>
            </div>
            <% } %>
            <% } %>

            <% if (locals.data) { %>
                <% for (let i = 0; i < data.length; i++) { %>
                    <% if (data[i].tags.includes("writing")) { %>

                        <div id="<%= data[i].modal  %>modal" class="modal">
                            <div class="modal-card  ease-in">
                                <div class="modal-header">
                                    <span class="modal-close">X</span>
                                    <p><%= data[i].title  %></p>
                                </div>
                                <div class="modal-body">
                                    <p>BODY</p>
                                </div>
                                <div class="modal-footer">
                                    <p>FOOT</p>
                                </div>
                        
                            </div>
                        </div>
                    <% } %>
                    <% } %>
                    <% } %>
    </div>
</div>